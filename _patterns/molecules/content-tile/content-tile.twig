{% set headingLevel = headingLevel | default('2') %}
{% set headingEl = 'h' ~ headingLevel %}

<a class="crux-content-tile" href="{{ link }}">
  <article>
    <header class="crux-content-tile__meta">
      {% if metaInfo %}
        <strong>{{ metaInfo ~ (metaDate ? ' â€“ ' : '') }}</strong>
      {% endif %}
      {% if metaDate %}
        <time>{{ metaDate }}</time>
      {% endif %}
    </header>
    <{{ headingEl }} class="crux-content-tile__header">{{ header }}</{{ headingEl }}>
    <div
      class="crux-content-tile__img-div"
      style="background-image: url('{{ thumbnailImgUrl }}');"
    >
      {# @TODO: Add flag for showing a play button svg here. #}
    </div>
    <p class="crux-content-tile__snippet">{{ snippet }}</p>
    <strong class="crux-content-tile__continue-link">Continue Reading . . .</strong>
  </article>
</a>
