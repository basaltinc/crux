{% set classes = [
  'cta',
  'u-full-width',
] | merge(classes|default([])) %}

<div id="cta" class="{{ classes|join(' ') }}">
  <div class="cta__inner u-site-container">
  <div class="cta__info">
    <h2 class="h1">{{ header_text }}</h2>
    <div data-linkto="{{ address_link }}" class="cta__address">
      <p>{{ address_one }}</p>
      <p>{{ address_two }}</p>
    </div>
    <p class="cta__tel">Tel: <a href="tel: {{ telephone }}">{{ telephone }}</a></p>
  </div>
  {% include '@components/_contact-form--simple.twig' %}
  </div>
</div>
