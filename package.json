{
  "name": "@basalt/crux-assets",
  "version": "3.0.0",
  "description": "Basalt Design System",
  "scripts": {
    "build": "run-p -l build:*",
    "build:bedrock": "bedrock build",
    "build:gulp": "rm -rf public/build && NODE_ENV=production gulp build",
    "build:tokens": "echo 'true'",
    "deploy": "now --build-env NPM_TOKEN=@npm-token && now alias",
    "new": "yo pl-pattern --base source/_patterns",
    "prepublishOnly": "yarn build",
    "serve": "bedrock serve",
    "start": "yarn build:gulp && bedrock start",
    "old:start": "gulp",
    "test": "gulp validate"
  },
  "dependencies": {
    "@basalt/bedrock": "0.17.5",
    "@basalt/demo-data": "^0.5.1",
    "@basalt/twig-renderer": "^0.10.2",
    "breakpoint-sass": "^2.7.1",
    "color": "^3.0.0",
    "fs-extra": "^7.0.0",
    "theo": "^8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@basalt/eslint-config-base": "^0.4.0",
    "@theme-tools/plugin-icon-font": "^1.1.0",
    "@theme-tools/plugin-sass": "^1.4.2",
    "@theme-tools/plugin-webpack": "^1.1.0",
    "babel-loader": "^8.0.0",
    "generator-pl-pattern": "^1.0.0",
    "gulp": "^4.0.0",
    "npm-run-all": "4.1.3",
    "scsstojson": "^1.0.2",
    "stylelint": "9.3.0",
    "stylelint-scss": "1.5.2",
    "webpack": "3.12.0",
    "yo": "1.8.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Basalt",
  "license": "MIT"
}
